create table board(
    id number primary key,
    title varchar2(100) not null,
    writer varchar2(30) not null,
    content varchar2(4000) not null,
    create_date date not null,
    modified_date date
);

create sequence seq_board;

drop sequence seq_test_board;

drop table hte_board;

drop table users;

create table users (
    idx number primary key,
    name varchar2(20) not null,
    password varchar2(50) not null
);

create sequence seq_users;


create table test_board(
    test_id number primary key,
    title varchar2(100) not null,
    writer varchar2(30) not null,
    content varchar2(4000) not null
);

create sequence test_board_seq;

ALTER SEQUENCE TEST_BOARD_SEQ
INCREMENT BY 1  -- 증가숫자 5
MAXVALUE 5000 -- 최대값 5000
MINVALUE 1 --  최소값 1
NOCYCLE  -- 순환안함
;

create table member(
    member_id varchar2(20) primary key,
    member_name varchar2(255) not null,
    member_password varchar2(255) not null,
    member_role varchar2(255) not null,
    member_create_date date default sysdate not null
);

create table board(
    board_id number(20) primary key,
    board_admin_views number(11) not null,
    board_content varchar2(4000) not null,
    board_create_date date not null,
    board_update_date date,
    board_likes number(11),
    board_title varchar2(255) not null,
    board_user_views number(11),
    member_id varchar2(20)
);

COMMIT;

